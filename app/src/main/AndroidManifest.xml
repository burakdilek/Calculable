<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calculable"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.calculable.Splash"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.calculable.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.calculable.HizliCarpma"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_hizli_carpma"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.calculable.HizliToplama"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_hizli_toplama"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.calculable.NormalCarpma"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_normal_carpma"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.calculable.NormalToplama"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_normal_toplama"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.calculable.Ayarlar"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_ayarlar"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
